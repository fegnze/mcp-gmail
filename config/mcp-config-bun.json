{
  "mcpServers": {
    "gmail": {
      "command": "bun",
      "args": [
        "src/index.ts"
      ],
      "cwd": "/path/to/mcp-gmail",
      "env": {
        "GOOGLE_CLIENT_ID": "your_google_client_id",
        "GOOGLE_CLIENT_SECRET": "your_google_client_secret",
        "GOOGLE_REDIRECT_URI": "http://localhost:8080/callback"
      }
    }
  }
}